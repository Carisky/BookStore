@model IEnumerable<BookStore.Models.Book>

@{
    ViewData["Title"] = "Filtered Books";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<h1>Filtered Books</h1>

@if (!Model.Any())
{
    <p>No books match the filter criteria.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Style</th>
                <th>Theme</th>
                <th>Publishing House</th>
                <th>Pages Count</th>
                <th>Cost</th>
                <th>Published At</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Style</td>
                    <td>@book.Theme</td>
                    <td>@book.PublishingHouse</td>
                    <td>@book.PagesCount</td>
                    <td>@book.Cost</td>
                    <td>@book.PublishedAt.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
    <button onclick="goBack()">Go Back</button>

    <script>
        function goBack() {
            window.history.back();
        }
    </script>
}
