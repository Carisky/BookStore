@model IEnumerable<BookStore.Models.Book>

@{
    ViewData["Title"] = "Filtered Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<h1>@ViewData["Title"]</h1>

@if (!Model.Any())
{
    <p>No books match the filter criteria.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Style</th>
                <th>Theme</th>
                <th>Publishing House</th>
                <th>Pages Count</th>
                <th>Cost</th>
                <th>Published At</th>
                <th>Download</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Style</td>
                    <td>@book.Theme</td>
                    <td>@book.PublishingHouse</td>
                    <td>@book.PagesCount</td>
                    <td>@book.Cost</td>
                    <td>@book.PublishedAt.ToShortDateString()</td>
                    <td>
                        <form action="@Url.Action("CreateFile", "Book")" method="post">
                            <input type="hidden" name="title" value="@book.Title" />
                            <input type="hidden" name="author" value="@book.Author" />
                            <input type="hidden" name="style" value="@book.Style" />
                            <input type="hidden" name="theme" value="@book.Theme" />
                            <input type="hidden" name="publishingHouse" value="@book.PublishingHouse" />
                            <input type="hidden" name="pagesCount" value="@book.PagesCount" />
                            <input type="hidden" name="cost" value="@book.Cost" />
                            <input type="hidden" name="publishedAt" value="@book.PublishedAt.ToShortDateString()" />
                            <button type="submit">Download</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button onclick="goBack()">Go Back</button>

    <script>
        function goBack() {
            window.history.back();
        }
    </script>
}
